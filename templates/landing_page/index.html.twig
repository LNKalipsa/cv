{% extends 'base.html.twig' %}

{% block title %}{{profil.firstname}} {{profil.name}}{% endblock %}

{% block body %}

<header>
    <nav id="nav" class="navbar navbar-light navbar-expand-lg bg-light fixed-top">
        <div class="container-fluid">
            <a href="#top" class="navbar-brand">Accueil</a>
            <ul class="nav nav-pills" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" href="#competence">Compétences</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#formation">Formation</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#experience">Expérience professionnelle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#loisir">Loisirs et intérêts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#realisation">Réalisations</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-light" style="background-color: #e3f2fd;" href="{{path('form')}}">Ajouter</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-5">
        <h1 id="landingPageTitle" class="mt-4">{{profil.firstname}} {{profil.name}}</h1>
    </div>
</header>

<div id="landingContainer" class="container" data-bs-spy="scroll" data-bs-target="#nav" data-bs-offset="10" tabindex="0">

{% set col = profil.drivingLicence ? 3 : 4 %}
    <div class="row">
        <div class="col-{{col}} text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
            </svg>
        </div>
        <div class="col-{{col}} text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
            </svg>
        </div>
        <div class="col-{{col}} text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-phone" viewBox="0 0 16 16">
                <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z"/>
                <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
            </svg>
        </div>
        {% if (profil.drivingLicence) %}
        <div class="col-{{col}} text-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 512 512"><!--! Font Awesome Pro 6.0.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. -->
                <path d="M39.61 196.8L74.8 96.29C88.27 57.78 124.6 32 165.4 32H346.6C387.4 32 423.7 57.78 437.2 96.29L472.4 196.8C495.6 206.4 512 229.3 512 256V448C512 465.7 497.7 480 480 480H448C430.3 480 416 465.7 416 448V400H96V448C96 465.7 81.67 480 64 480H32C14.33 480 0 465.7 0 448V256C0 229.3 16.36 206.4 39.61 196.8V196.8zM109.1 192H402.9L376.8 117.4C372.3 104.6 360.2 96 346.6 96H165.4C151.8 96 139.7 104.6 135.2 117.4L109.1 192zM96 256C78.33 256 64 270.3 64 288C64 305.7 78.33 320 96 320C113.7 320 128 305.7 128 288C128 270.3 113.7 256 96 256zM416 320C433.7 320 448 305.7 448 288C448 270.3 433.7 256 416 256C398.3 256 384 270.3 384 288C384 305.7 398.3 320 416 320z"/>
            </svg>
        </div>
        {% endif %}
    </div>
    

    <div class="row">
        <div class="col-{{col}} text-center">{{profil.address}} <br/> {{profil.postcode}} {{profil.city}} </div>
        <div class="col-{{col}} text-center">{{profil.mail}}</div>
        <div class="col-{{col}} text-center">{{profil.phoneNumber}}</div>

        {% if (profil.drivingLicence) %}
            <div class="col-{{col}} text-center">Permis</div>
        {% endif %}
    </div>

<div class="card mt-2 p-1 border-dark">
    <p>{{profil.description}}</p>
</div>

    <div class="card mt-2 p-1 border-info">
        <h4 id="competence" class="text-info">Compétences</h4>
        <div class="row">
            {% for competence in competences %}
                <li class="col-3">{{ competence.name }}</li>
            {% endfor %}
        </div>
    </div>
    
    <div class="card mt-2 p-1 border-orange">
        <h4 id="formation" class="text-orange">Formation</h4>
        <div class="row">
            {% for formation in formations %}
                <li class="col-3">{{ formation.name }}</li>
            {% endfor %}
        </div>
    </div>
    
    <div class="card mt-2 p-1 border-warning">
        <h4 id="experience" class="text-warning">Expérience professionnelle</h4>
        <div class="row">
            {% for experience in experiences %}
                <li class="col-3">{{ experience.name }}</li>
            {% endfor %}
        </div>
    </div>
    
    <div class="card mt-2 p-1 border-teal">
        <h4 id="loisir" class="text-teal">Loisirs et Intérêts</h4>
        <div class="row">
            {% for loisir in loisirs %}
                <li class="col-3">{{ loisir.name }}</li>
            {% endfor %}
        </div>
    </div>
    
    {# <div class="card mt-2 p-1 border-indigo">
        <h4 id="realisation" class="text-indigo">Réalisations</h4>
        <div class="row">
        </div>
    </div> #}
</div>

{% endblock %}
