<div class="card border-teal min-height">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <h5 class="card-title text-teal">Ajouter un loisir</h5>
                {{ form_start(leisure_form) }}
                    {{form_widget(leisure_form.name, {'attr': {'placeholder': 'Nom du loisir', 'class':'form-control border-teal'}})}}
                    {{form_widget(leisure_form.description, {'attr': {'placeholder': 'Description', 'class':'form-control border-teal mt-3'}})}}
                    {{form_widget(leisure_form.enregistrer, {'attr': {'class':'btn btn-teal btn-sm mt-3'}})}}
                {{ form_end(leisure_form) }}
            </div>
            <div class="col-6">
                <h5 class="card-title text-teal">Liste des loisirs</h5>
                <ul>
                    {% for leisure in leisures %}
                        <li>
                            {{leisure.name}}
                            <a href="{{ path('delete_leisure', {id:leisure.id}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-x" viewBox="0 0 16 16">
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                </svg>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>