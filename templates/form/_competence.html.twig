<div class="card border-info min-height">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <h5 class="card-title text-info">Ajouter une compétence</h5>
                {{ form_start(competence_form) }}
                    {{form_widget(competence_form.name, {'attr': {'placeholder': 'Nom de la compétence', 'class':'form-control border-info'}})}}
                    {{form_widget(competence_form.enregistrer, {'attr': {'class':'btn btn-info btn-sm mt-3'}})}}
                {{ form_end(competence_form) }}
            </div>
            <div class="col-6">
                <h5 class="card-title text-info">Liste des compétences</h5>
                <ul>
                    {% for competence in competences %}
                        <li>
                            {{competence.name}}
                            {# <a href="{{ path('delete_competence', {id:competence.id}) }}"> #}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-x" viewBox="0 0 16 16">
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                </svg>
                            {# </a> #}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>